<Window x:Class="Arca.NET.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Arca - Vault Manager" 
        Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1a1a2e">
    
    <Window.Resources>
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="Foreground" Value="#e8e8e8"/>
            <Setter Property="BorderBrush" Value="#0f3460"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="Foreground" Value="#e8e8e8"/>
            <Setter Property="BorderBrush" Value="#0f3460"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#e94560"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#ff6b6b"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#555"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#e94560"/>
            <Setter Property="BorderBrush" Value="#e94560"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2a2a4e"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <!-- Login Panel -->
        <StackPanel x:Name="LoginPanel" 
                    VerticalAlignment="Center" 
                    Margin="40">
            
            <!-- Logo/Title -->
            <TextBlock Text="🔐" 
                       FontSize="64" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            
            <TextBlock Text="ARCA" 
                       FontSize="36" 
                       FontWeight="Bold"
                       Foreground="#e94560"
                       HorizontalAlignment="Center"/>
            
            <TextBlock Text="Secure Vault Manager" 
                       FontSize="14" 
                       Foreground="#888"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,40"/>
            
            <!-- Password Field -->
            <TextBlock Text="Master Password" 
                       Foreground="#aaa" 
                       FontSize="12"
                       Margin="0,0,0,8"/>
            
            <PasswordBox x:Name="PasswordBox" 
                         Style="{StaticResource ModernPasswordBox}"
                         KeyDown="PasswordBox_KeyDown"/>
            
            <!-- Error Message -->
            <TextBlock x:Name="ErrorMessage" 
                       Foreground="#ff6b6b" 
                       FontSize="12"
                       Margin="0,10,0,0"
                       Visibility="Collapsed"/>
            
            <!-- Unlock Button -->
            <Button x:Name="UnlockButton"
                    Content="🔓 Unlock Vault" 
                    Style="{StaticResource PrimaryButton}"
                    Margin="0,20,0,0"
                    Click="UnlockButton_Click"/>
            
            <!-- Create New Vault -->
            <Button x:Name="CreateVaultButton"
                    Content="Create New Vault" 
                    Style="{StaticResource SecondaryButton}"
                    Margin="0,15,0,0"
                    Click="CreateVaultButton_Click"/>
            
            <!-- Status -->
            <TextBlock x:Name="VaultStatus" 
                       Foreground="#666" 
                       FontSize="11"
                       HorizontalAlignment="Center"
                       Margin="0,30,0,0"/>
        </StackPanel>
        
        <!-- Create Vault Panel -->
        <StackPanel x:Name="CreateVaultPanel" 
                    VerticalAlignment="Center" 
                    Margin="40"
                    Visibility="Collapsed">
            
            <TextBlock Text="🆕" 
                       FontSize="48" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            
            <TextBlock Text="Create New Vault" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Foreground="#e94560"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>
            
            <!-- New Password -->
            <TextBlock Text="New Master Password" 
                       Foreground="#aaa" 
                       FontSize="12"
                       Margin="0,0,0,8"/>
            
            <PasswordBox x:Name="NewPasswordBox" 
                         Style="{StaticResource ModernPasswordBox}"
                         PasswordChanged="NewPasswordBox_PasswordChanged"/>
            
            <!-- Password Strength -->
            <ProgressBar x:Name="PasswordStrengthBar"
                         Height="4"
                         Margin="0,8,0,0"
                         Background="#333"
                         Foreground="#e94560"/>
            
            <TextBlock x:Name="PasswordStrengthText" 
                       Foreground="#888" 
                       FontSize="11"
                       Margin="0,5,0,0"/>
            
            <!-- Confirm Password -->
            <TextBlock Text="Confirm Password" 
                       Foreground="#aaa" 
                       FontSize="12"
                       Margin="0,20,0,8"/>
            
            <PasswordBox x:Name="ConfirmPasswordBox" 
                         Style="{StaticResource ModernPasswordBox}"/>
            
            <!-- Create Error Message -->
            <TextBlock x:Name="CreateErrorMessage" 
                       Foreground="#ff6b6b" 
                       FontSize="12"
                       Margin="0,10,0,0"
                       Visibility="Collapsed"/>
            
            <!-- Create Button -->
            <Button x:Name="ConfirmCreateButton"
                    Content="🔒 Create Vault" 
                    Style="{StaticResource PrimaryButton}"
                    Margin="0,25,0,0"
                    Click="ConfirmCreateButton_Click"/>
            
            <!-- Back Button -->
            <Button Content="← Back" 
                    Style="{StaticResource SecondaryButton}"
                    Margin="0,15,0,0"
                    Click="BackButton_Click"/>
            
            <!-- Warning -->
            <Border Background="#2a1a1a" 
                    CornerRadius="6" 
                    Padding="15"
                    Margin="0,25,0,0">
                <StackPanel>
                    <TextBlock Text="⚠️ Important" 
                               Foreground="#ffaa00" 
                               FontWeight="SemiBold"
                               FontSize="12"/>
                    <TextBlock Text="This password cannot be recovered. If you forget it, your data will be permanently lost."
                               Foreground="#888"
                               FontSize="11"
                               TextWrapping="Wrap"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
        
        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay"
                Background="#CC1a1a2e"
                Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="⏳" FontSize="32" HorizontalAlignment="Center"/>
                <TextBlock x:Name="LoadingText" 
                           Text="Processing..." 
                           Foreground="#aaa"
                           FontSize="14"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
