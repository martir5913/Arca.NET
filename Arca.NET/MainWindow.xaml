<Window x:Class="Arca.NET.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Arca.NET"
        mc:Ignorable="d"
        Title="Arca - Vault Manager" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a2e">
    
    <Window.Resources>
        <local:BoolToStatusConverter x:Key="BoolToStatusConverter"/>
        
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="Foreground" Value="#e8e8e8"/>
            <Setter Property="BorderBrush" Value="#0f3460"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="SmallTextBox" TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="MinHeight" Value="28"/>
        </Style>
        
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#e94560"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#ff6b6b"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2a2a4e"/>
                    <Setter Property="Foreground" Value="#e94560"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#16213e" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🔐" FontSize="24" VerticalAlignment="Center"/>
                    <TextBlock Text="ARCA" FontSize="24" FontWeight="Bold" Foreground="#e94560" 
                               Margin="10,0,0,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Vault Manager" FontSize="14" Foreground="#666" 
                               Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="➖" Style="{StaticResource IconButton}" 
                            Click="MinimizeButton_Click" ToolTip="Minimize to tray"/>
                    <Button Content="🔒 Lock" Style="{StaticResource IconButton}" 
                            Click="LockButton_Click" ToolTip="Lock Vault" Margin="5,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Toolbar -->
        <Border Grid.Row="1" Background="#0f3460" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Search -->
                <TextBox x:Name="txtSearch" 
                         Style="{StaticResource ModernTextBox}"
                         Width="300"
                         HorizontalAlignment="Left"
                         TextChanged="SearchBox_TextChanged"/>
                
                <!-- Export/Import Button -->
                <Button Grid.Column="1" 
                        Content="📦 Backup" 
                        Style="{StaticResource IconButton}"
                        Padding="15,10"
                        Click="BackupButton_Click"
                        ToolTip="Export or Import vault"/>
                
                <!-- Audit Log Button -->
                <Button Grid.Column="2" 
                        Content="📋 Audit" 
                        Style="{StaticResource IconButton}"
                        Padding="15,10"
                        Click="AuditLogButton_Click"
                        ToolTip="View access audit log"/>
                
                <!-- API Keys Button -->
                <Button Grid.Column="3" 
                        Content="🔑 API Keys" 
                        Style="{StaticResource IconButton}"
                        Padding="15,10"
                        Click="ApiKeysButton_Click"
                        ToolTip="Manage API Keys for SDK access"/>
                
                <!-- Add Button -->
                <Button Grid.Column="4" 
                        Content="➕ Add Secret" 
                        Style="{StaticResource PrimaryButton}"
                        Margin="10,0,0,0"
                        Click="AddSecretButton_Click"/>
            </Grid>
        </Border>
        
        <!-- Secrets List -->
        <Border Grid.Row="2" Margin="15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="lstSecrets">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#16213e" CornerRadius="6" Margin="0,0,0,10" Padding="15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel>
                                        <TextBlock Text="{Binding Key}" 
                                                   FontSize="16" FontWeight="SemiBold" 
                                                   Foreground="#e8e8e8"/>
                                        <TextBlock Text="{Binding Description}" 
                                                   FontSize="12" Foreground="#666"
                                                   Margin="0,5,0,0"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                            <TextBlock Text="Value: " Foreground="#888" FontSize="12"/>
                                            <TextBlock Text="••••••••••••" Foreground="#aaa" FontSize="12"/>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                        <Button Content="📋" Style="{StaticResource IconButton}" 
                                                Click="CopyValueButton_Click" ToolTip="Copy"
                                                Tag="{Binding Value}"/>
                                        <Button Content="✏️" Style="{StaticResource IconButton}" 
                                                Click="EditSecretButton_Click" ToolTip="Edit"
                                                Tag="{Binding}"/>
                                        <Button Content="🗑️" Style="{StaticResource IconButton}" 
                                                Click="DeleteSecretButton_Click" ToolTip="Delete"
                                                Tag="{Binding Id}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
        
        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#0f3460" Padding="15,10">
            <Grid>
                <TextBlock x:Name="txtStatus" Text="🔓 Vault unlocked" Foreground="#4ecdc4" FontSize="12"/>
                <TextBlock x:Name="txtSecretCount" Text="0 secrets" Foreground="#666" FontSize="12" 
                           HorizontalAlignment="Right"/>
            </Grid>
        </Border>
        
        <!-- Add/Edit Secret Dialog -->
        <Border x:Name="pnlDialog" 
                Grid.RowSpan="4"
                Background="#CC000000"
                Visibility="Collapsed">
            <Border Background="#1a1a2e" 
                    CornerRadius="8"
                    Width="450"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="25">
                <StackPanel>
                    <TextBlock x:Name="txtDialogTitle" 
                               Text="Add New Secret" 
                               FontSize="20" FontWeight="Bold"
                               Foreground="#e94560"
                               Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Key (Name)" Foreground="#aaa" FontSize="12" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtSecretKey" Style="{StaticResource ModernTextBox}"/>
                    
                    <TextBlock Text="Value (Secret)" Foreground="#aaa" FontSize="12" Margin="0,15,0,5"/>
                    <TextBox x:Name="txtSecretValue" Style="{StaticResource ModernTextBox}"/>
                    
                    <TextBlock Text="Description (Optional)" Foreground="#aaa" FontSize="12" Margin="0,15,0,5"/>
                    <TextBox x:Name="txtSecretDescription" Style="{StaticResource ModernTextBox}"/>
                    
                    <TextBlock x:Name="txtDialogError" 
                               Foreground="#ff6b6b" FontSize="12"
                               Margin="0,15,0,0"
                               Visibility="Collapsed"/>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">
                        <Button Content="Cancel" 
                                Style="{StaticResource IconButton}"
                                Padding="15,10"
                                Click="CancelDialogButton_Click"/>
                        <Button Content="💾 Save" 
                                Style="{StaticResource PrimaryButton}"
                                Margin="10,0,0,0"
                                Click="SaveSecretButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>
        
        <!-- API Keys Management Dialog -->
        <Border x:Name="pnlApiKeys" 
                Grid.RowSpan="4"
                Background="#CC000000"
                Visibility="Collapsed">
            <Border Background="#1a1a2e" 
                    CornerRadius="8"
                    Width="700"
                    MaxHeight="600"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="25">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock Text="API Keys" 
                                   FontSize="20" FontWeight="Bold"
                                   Foreground="#e94560"/>
                        <TextBlock Text="Generate API Keys to allow external applications to access specific secrets via SDK." 
                                   Foreground="#888" FontSize="12" Margin="0,5,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                    
                    <!-- New Key Form -->
                    <Border Grid.Row="1" Background="#16213e" CornerRadius="6" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <!-- Name and Access Level -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="txtNewKeyName" 
                                         Style="{StaticResource ModernTextBox}"
                                         Tag="API Key name (e.g., 'WebAPI-Production')"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0">
                                    <RadioButton x:Name="rbFullAccess" Content="Full Access" 
                                                 Foreground="#2ed573" IsChecked="True" 
                                                 VerticalAlignment="Center" Margin="0,0,10,0"
                                                 GroupName="AccessLevel"
                                                 Checked="AccessLevel_Changed"/>
                                    <RadioButton x:Name="rbRestrictedAccess" Content="Restricted" 
                                                 Foreground="#ffa502" VerticalAlignment="Center"
                                                 GroupName="AccessLevel"
                                                 Checked="AccessLevel_Changed"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Secrets Selection (visible when Restricted) -->
                            <Border x:Name="pnlSecretsSelection" Visibility="Collapsed" 
                                    Background="#0f3460" CornerRadius="4" Padding="12" Margin="0,12,0,0">
                                <StackPanel>
                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="txtSecretFilter" 
                                                 Style="{StaticResource SmallTextBox}"
                                                 Tag="Filter secrets..."
                                                 TextChanged="SecretFilter_TextChanged"/>
                                        <Button Grid.Column="1" Content="All" 
                                                Style="{StaticResource IconButton}"
                                                Padding="10,6" Margin="8,0,0,0" FontSize="11"
                                                Click="SelectAllSecrets_Click"/>
                                        <Button Grid.Column="2" Content="None" 
                                                Style="{StaticResource IconButton}"
                                                Padding="10,6" Margin="5,0,0,0" FontSize="11"
                                                Click="SelectNoSecrets_Click"/>
                                    </Grid>
                                    
                                    <TextBlock Text="Select secrets this API Key can access:" 
                                               Foreground="#888" FontSize="11" Margin="0,0,0,8"/>
                                    
                                    <ScrollViewer MaxHeight="130" VerticalScrollBarVisibility="Auto">
                                        <ItemsControl x:Name="lstSecretsCheckboxes">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <CheckBox Content="{Binding Key}" 
                                                              IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                              Foreground="#e8e8e8" 
                                                              FontSize="12"
                                                              Margin="0,3"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                        <CheckBox x:Name="chkCanList" 
                                                  Content="Can list available secrets" 
                                                  Foreground="#888" FontSize="11"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            
                            <!-- Generate Button -->
                            <Button Content="Generate API Key" 
                                    Style="{StaticResource PrimaryButton}"
                                    Margin="0,10,0,0"
                                    HorizontalAlignment="Right"
                                    Click="GenerateApiKeyButton_Click"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Existing Keys List -->
                    <StackPanel Grid.Row="2">
                        <TextBlock Text="Existing API Keys:" Foreground="#888" FontSize="11" Margin="0,0,0,8"/>
                        <ScrollViewer MaxHeight="150" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="lstApiKeys">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#16213e" CornerRadius="6" Margin="0,0,0,8" Padding="12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" 
                                                                   Foreground="#e8e8e8" FontSize="13"/>
                                                        <TextBlock Text="{Binding Permissions.Level}" 
                                                                   Foreground="#ffa502" FontSize="10" 
                                                                   Margin="8,2,0,0" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                    <TextBlock Foreground="#666" FontSize="10" Margin="0,2,0,0">
                                                        <Run Text="Last used: "/>
                                                        <Run Text="{Binding LastUsedAt, StringFormat='{}{0:MM/dd HH:mm}', TargetNullValue='Never'}"/>
                                                    </TextBlock>
                                                </StackPanel>
                                                
                                                <Button Grid.Column="1" 
                                                        Content="View" 
                                                        Style="{StaticResource IconButton}"
                                                        Padding="8,4" FontSize="10"
                                                        Tag="{Binding Id}"
                                                        Click="ViewApiKeyPermissions_Click"
                                                        ToolTip="View permissions"/>
                                                
                                                <Button Grid.Column="2" 
                                                        Content="Revoke" 
                                                        Style="{StaticResource IconButton}"
                                                        Foreground="#ff6b6b"
                                                        Padding="8,4" FontSize="10" Margin="5,0,0,0"
                                                        Tag="{Binding Id}"
                                                        Click="DeleteApiKeyButton_Click"
                                                        ToolTip="Revoke this API Key"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                    
                    <!-- Generated Key Display -->
                    <Border x:Name="pnlGeneratedKey" Grid.Row="3" 
                            Background="#0f3460" CornerRadius="6" Padding="15"
                            Visibility="Collapsed" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="Copy this API Key now! It won't be shown again." 
                                       Foreground="#ffaa00" FontWeight="Bold" FontSize="12"/>
                            <TextBox x:Name="txtGeneratedKey" 
                                     Style="{StaticResource ModernTextBox}"
                                     IsReadOnly="True" 
                                     Margin="0,10,0,0"
                                     FontFamily="Consolas"/>
                            <Button Content="Copy to Clipboard" 
                                    Style="{StaticResource PrimaryButton}"
                                    Margin="0,10,0,0"
                                    Click="CopyApiKeyButton_Click"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Footer -->
                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                        <Button Content="Close" 
                                Style="{StaticResource IconButton}"
                                Padding="15,10"
                                Click="CloseApiKeysButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
        
        <!-- Audit Log Dialog -->
        <Border x:Name="pnlAuditLog" 
                Grid.RowSpan="4"
                Background="#CC000000"
                Visibility="Collapsed">
            <Border Background="#1a1a2e" 
                    CornerRadius="8"
                    Width="800"
                    MaxHeight="600"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="25">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock Text="📋 Audit Log" 
                                   FontSize="20" FontWeight="Bold"
                                   Foreground="#e94560"/>
                        <TextBlock Text="View all secret access requests and their results." 
                                   Foreground="#888" FontSize="12" Margin="0,5,0,0"/>
                    </StackPanel>
                    
                    <!-- Statistics -->
                    <Border Grid.Row="1" Background="#16213e" CornerRadius="6" Padding="15" Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock x:Name="txtTotalRequests" Text="0" FontSize="24" FontWeight="Bold" 
                                           Foreground="#4ecdc4" HorizontalAlignment="Center"/>
                                <TextBlock Text="Total Requests" Foreground="#888" FontSize="11"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock x:Name="txtSuccessRequests" Text="0" FontSize="24" FontWeight="Bold" 
                                           Foreground="#2ed573" HorizontalAlignment="Center"/>
                                <TextBlock Text="Successful" Foreground="#888" FontSize="11"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock x:Name="txtFailedRequests" Text="0" FontSize="24" FontWeight="Bold" 
                                           Foreground="#ff6b6b" HorizontalAlignment="Center"/>
                                <TextBlock Text="Failed" Foreground="#888" FontSize="11"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                <TextBlock x:Name="txtUniqueClients" Text="0" FontSize="24" FontWeight="Bold" 
                                           Foreground="#ffa502" HorizontalAlignment="Center"/>
                                <TextBlock Text="Unique Clients" Foreground="#888" FontSize="11"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Log List -->
                    <Border Grid.Row="2" Background="#16213e" CornerRadius="6">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="lstAuditLogs">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#2a2a4e" BorderThickness="0,0,0,1" Padding="12,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="140"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="60"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Timestamp -->
                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding Timestamp, StringFormat='{}{0:MM/dd HH:mm:ss}'}" 
                                                           Foreground="#888" FontSize="11" FontFamily="Consolas"
                                                           VerticalAlignment="Center"/>
                                                
                                                <!-- API Key Name -->
                                                <TextBlock Grid.Column="1" 
                                                           Text="{Binding ApiKeyName}" 
                                                           Foreground="#4ecdc4" FontSize="11"
                                                           VerticalAlignment="Center"
                                                           TextTrimming="CharacterEllipsis"/>
                                                
                                                <!-- Action -->
                                                <TextBlock Grid.Column="2" 
                                                           Text="{Binding Action}" 
                                                           Foreground="#ffa502" FontSize="11" FontWeight="Bold"
                                                           VerticalAlignment="Center"/>
                                                
                                                <!-- Secret Key -->
                                                <TextBlock Grid.Column="3" 
                                                           Text="{Binding SecretKey, TargetNullValue='-'}" 
                                                           Foreground="#e8e8e8" FontSize="11"
                                                           VerticalAlignment="Center"
                                                           TextTrimming="CharacterEllipsis"/>
                                                
                                                <!-- Status -->
                                                <TextBlock Grid.Column="4" 
                                                           Text="{Binding Success, Converter={StaticResource BoolToStatusConverter}}" 
                                                           FontSize="11" FontWeight="Bold"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                    
                    <!-- Footer -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                        <Button Content="Refresh" 
                                Style="{StaticResource IconButton}"
                                Padding="15,10"
                                Click="RefreshAuditLogButton_Click"/>
                        <Button Content="Close" 
                                Style="{StaticResource IconButton}"
                                Padding="15,10"
                                Margin="10,0,0,0"
                                Click="CloseAuditLogButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
        
        <!-- Backup Dialog (Export/Import) -->
        <Border x:Name="pnlBackup" 
                Grid.RowSpan="4"
                Background="#CC000000"
                Visibility="Collapsed">
            <Border Background="#1a1a2e" 
                    CornerRadius="8"
                    Width="500"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="25">
                <StackPanel>
                    <!-- Header -->
                    <TextBlock Text="Backup &amp; Restore" 
                               FontSize="20" FontWeight="Bold"
                               Foreground="#e94560" Margin="0,0,0,5"/>
                    <TextBlock Text="Export your vault to transfer to another machine, or import from a backup file." 
                               Foreground="#888" FontSize="12" TextWrapping="Wrap" Margin="0,0,0,20"/>
                    
                    <!-- Export Section -->
                    <Border Background="#16213e" CornerRadius="6" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Export Vault" FontWeight="Bold" Foreground="#2ed573" FontSize="14" Margin="0,0,0,10"/>
                            <TextBlock Text="Create an encrypted backup file with all your secrets and API Keys." 
                                       Foreground="#888" FontSize="11" TextWrapping="Wrap" Margin="0,0,0,10"/>
                            

                            <TextBlock Text="Export Password:" Foreground="#888" FontSize="11" Margin="0,0,0,5"/>
                            <PasswordBox x:Name="txtExportPassword" 
                                         Background="#0f3460" Foreground="#e8e8e8" 
                                         BorderBrush="#0f3460" BorderThickness="2"
                                         Padding="8,6" FontSize="13"/>
                            
                            <TextBlock Text="Confirm Password:" Foreground="#888" FontSize="11" Margin="0,10,0,5"/>
                            <PasswordBox x:Name="txtExportPasswordConfirm" 
                                         Background="#0f3460" Foreground="#e8e8e8" 
                                         BorderBrush="#0f3460" BorderThickness="2"
                                         Padding="8,6" FontSize="13"/>

                            <Button Content="Export to File" 
                                    Style="{StaticResource PrimaryButton}"
                                    Background="#2ed573"
                                    Margin="0,15,0,0"
                                    Click="ExportVaultButton_Click"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Import Section -->
                    <Border Background="#16213e" CornerRadius="6" Padding="15">
                        <StackPanel>
                            <TextBlock Text="Import Vault" FontWeight="Bold" Foreground="#ffa502" FontSize="14" Margin="0,0,0,10"/>
                            <TextBlock Text="Restore secrets from a backup file. You can merge or overwrite existing secrets." 
                                       Foreground="#888" FontSize="11" TextWrapping="Wrap" Margin="0,0,0,10"/>
                            

                            <TextBlock Text="Import Password:" Foreground="#888" FontSize="11" Margin="0,0,0,5"/>
                            <PasswordBox x:Name="txtImportPassword" 
                                         Background="#0f3460" Foreground="#e8e8e8" 
                                         BorderBrush="#0f3460" BorderThickness="2"
                                         Padding="8,6" FontSize="13"/>
                            
                            <CheckBox x:Name="chkOverwriteExisting" 
                                      Content="Overwrite existing secrets with same name" 
                                      Foreground="#888" FontSize="11" Margin="0,10,0,0"/>
                            
                            <CheckBox x:Name="chkImportApiKeys" 
                                      Content="Import API Keys (will be inactive)" 
                                      Foreground="#888" FontSize="11" Margin="0,5,0,0" IsChecked="True"/>

                            <Button Content="Import from File" 
                                    Style="{StaticResource PrimaryButton}"
                                    Background="#ffa502"
                                    Margin="0,15,0,0"
                                    Click="ImportVaultButton_Click"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Close Button -->
                    <Button Content="Close" 
                            Style="{StaticResource IconButton}"
                            Padding="15,10"
                            HorizontalAlignment="Right"
                            Margin="0,15,0,0"
                            Click="CloseBackupButton_Click"/>
                </StackPanel>
            </Border>
        </Border>
        
        <!-- Notifications Container -->
        <StackPanel x:Name="notificationsContainer" 
                    Grid.RowSpan="4"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Margin="20"
                    IsHitTestVisible="True"/>
        
        <!-- Confirm Dialog Container -->
        <Grid x:Name="dialogContainer" Grid.RowSpan="4"/>
    </Grid>
</Window>
